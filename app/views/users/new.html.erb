<% provide :page_title, 'Sign up' %>
<% currently_at 'Sign up' %>

<h1 class="mb-4">Sign up</h1>

<%= render 'shared/errors', object: @user %>

<%= form_with model: @user do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-1 form-label">
      <%= f.label :email %>
    </div>
    <div class="col-sm-11">
      <%= f.email_field :email, placeholder: 'Your e-mail', class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-1 form-label">
      <%= f.label :name %>
    </div>
    <div class="col-sm-11">
      <%= f.text_field :name, placeholder: 'Your name', class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-1 form-label">
      <%= f.label :password %>
    </div>
    <div class="col-sm-11">
      <%= f.password_field :password, placeholder: 'Your password', class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-1 form-label">
      <%= f.label :password_confirmation %>
    </div>
    <div class="col-sm-11">
      <%= f.password_field :password_confirmation, placeholder: 'Password confirmation', class: 'form-control form-control-lg' %>
    </div>
  </div>

  <%= f.submit 'Sign up', class: 'btn btn-primary btn-lg' %>
<% end %>
